div.row
    div.col-lg-12
        include:md ../README.md
hr
style.
    #smartTagForm1 span.label {
        cursor: pointer;
        margin-right: 5px;
    }
div.row
    div.col-lg-6
        div.col-sm-12.well
            h3
                span.label.label-default Demo 1:
            form.form-horizontal#smartTagForm1
                div.form-group
                    label.col-sm-3.control-label Tags Group 1:
                    div.col-sm-9#smartTagGroup1
                        each idx in [1,2,3,4]
                            button.btn.btn-default.btn-sm.smartTag(type="button",value="#{idx}") Option #{idx}&nbsp;
                div.form-group
                    label.col-sm-3.control-label Tags Group 2:
                    div.col-sm-9(data-role="smartTag",
                    data-target="#smartTagGroup1",
                    data-add="/addTag",
                    data-remove="/removeTag")
                        each idx in [5,6,7,8,9,10]
                            button.btn.btn-default.btn-sm.smartTag(type="button",value="#{idx}") Option #{idx}
    div.col-lg-6
        div.col-sm-12.well
            h3
                span.label.label-default Demo 2:
            form.form-horizontal#smartTagForm2
                div.form-group
                    label.col-sm-3.control-label Tags Group 1:
                    div.col-sm-9#smartTagGroup2
                        each idx in [1,2,3,4]
                            button.btn.btn-default.btn-sm.smartTag(type="button",value="#{idx}") Option #{idx}&nbsp;
                div.form-group
                    label.col-sm-3.control-label Tags Group 2:
                    div#smartTagDiv.col-sm-9
                        each idx in [5,6,7,8,9,10]
                            button.btn.btn-default.btn-sm.smartTag(type="button",value="#{idx}") Option #{idx}
script(type="text/javascript").
    $(function () {
        $('#smartTagDiv').smartTag('#smartTagGroup2', {
            target: "#smartTagGroup2",
            add: "/addTag",
            remove: "/removeTag"
        });
    });